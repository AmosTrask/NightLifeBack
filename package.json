{
  "name": "nightlightlifeback",
  "version": "1.0.0",
  "description": "",
  "main": "src/app.ts",
  "scripts": {
    "start": "npm run build && npm run init-db && node dist/server.js",
    "init-db": "ts-node ./scripts/run-init-db.ts",
    "serve": "npm run build && concurrently --kill-others \"npm run build-watch\" \"npm run serve-debug\"",
    "serve-init-db": "npm run build && npm run init-db && concurrently --kill-others \"npm run build-watch\" \"npm run serve-debug\"",
    "build": "tsc",
    "build-watch": "tsc -w",
    "serve-debug": "nodemon --inspect dist/server.js",
    "lint": "tslint --project .",
    "coverage": "npm run init-db && jest --forceExit --detectOpenHandles --coverage",
    "test": "jest --forceExit --detectOpenHandles"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.11",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mongodb": "^3.1.22",
    "@types/supertest": "^2.0.7",
    "bcrypt": "^3.0.5",
    "bcrypt-nodejs": "0.0.3",
    "concurrently": "^4.1.0",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "jest": "^24.7.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.2.2",
    "nodemon": "^1.18.10",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.1",
    "ts-node": "^8.0.3",
    "tslint": "^5.15.0",
    "typescript": "^3.4.1"
  }
}
